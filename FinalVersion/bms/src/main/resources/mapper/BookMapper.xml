<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.mapper.BookMapper">

    <resultMap id="BaseResultMap" type="org.example.entity.Book">
        <id property="bookId" column="book_id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="bookImg" column="book_img" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="isbn" column="isbn" jdbcType="VARCHAR"/>
        <result property="publicationDate" column="publication_date"></result>
        <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
        <result property="bookNum" column="book_status" jdbcType="TINYINT"/>
        <result property="bookBorrowNum" column="book_status" jdbcType="TINYINT"/>
    </resultMap>
    <resultMap id="QueryResultMap" type="org.example.vo.BookCategoryVo">
        <id property="bookId" column="book_id" jdbcType="INTEGER"/>
        <result property="title" column="title" jdbcType="VARCHAR"/>
        <result property="bookImg" column="book_img" jdbcType="VARCHAR"/>
        <result property="author" column="author" jdbcType="VARCHAR"/>
        <result property="isbn" column="isbn" jdbcType="VARCHAR"/>
        <result property="publicationDate" column="publication_date"></result>
        <result property="categoryId" column="category_id" jdbcType="INTEGER"/>
        <result property="bookNum" column="book_num" jdbcType="TINYINT"/>
        <result property="bookBorrowNum" column="book_borrow_num" jdbcType="TINYINT"/>
        <result property="categoryName" column="category_name" jdbcType="VARCHAR"/>
    </resultMap>
    <sql id="Base_Column_List"> book_id,title,book_img, author,publication_date,isbn, category_id,book_status </sql>
    <select id="selectBooks" resultMap="QueryResultMap">
        SELECT * FROM t_book b LEFT JOIN t_category c ON b.category_id = c.category_id
        <where>
        <if test="title!=null and title!=''"> and title like CONCAT("%",#{title},"%") </if>
        <if test="author!=null and author!=''"> and author like CONCAT("%",#{author},"%") </if>
        <if test="isbn!=null and isbn!=''"> and isbn like CONCAT("%",#{isbn},"%") </if>
        <if test="categoryName!=null and categoryName!=''"> and category_name like CONCAT("%",#{categoryName},"%") </if>
        </where>
        limit #{startIndex},#{pageSize}
    </select>
    <select id="selectBooksCount" resultType="int">
        SELECT count(*) FROM t_book b LEFT JOIN t_category c ON b.category_id = c.category_id
        <where>
            <if test="title!=null and title!=''"> and title like CONCAT("%",#{title},"%") </if>
            <if test="author!=null and author!=''"> and author like CONCAT("%",#{author},"%") </if>
            <if test="isbn!=null and isbn!=''"> and isbn like CONCAT("%",#{isbn},"%") </if>
            <if test="categoryName!=null and categoryName!=''"> and category_name like CONCAT("%",#{categoryName},"%") </if>
        </where>
    </select>
</mapper>
